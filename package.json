{
    "name": "alioth-language-support",
    "displayName": "Alioth Language Support",
    "icon": "icon/icon.png",
    "author": {
        "email": "stinger121@live.com",
        "name": "GodGnidoc",
        "url": "https://dn-ezr.cn"
    },
    "publisher": "GodGnidoc",
    "description": "The language support for the Alioth programming language.",
    "repository": {
        "type": "git",
        "url": "http://dn-ezr.cn:3000"
    },
    "license": "MIT",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.34.0"
    },
    "activationEvents": [
        "onCommand:alioth.initiateworkspace",
        "onLanguage:alioth"
    ],
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/client.js",
    "contributes": {
        "languages": [
            {
                "id": "alioth",
                "aliases": [
                    "Alioth",
                    "alioth"
                ],
                "extensions": [
                    ".alioth"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alioth",
                "scopeName": "source.alioth",
                "path": "./syntaxes/alioth.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "title": "Alioth: Initiate workspace",
                "command": "alioth.initiateworkspace"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run update-vscode && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "update-vscode": "vscode-install",
        "postinstall": "vscode-install"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode": "^1.1.28",
        "vscode-languageclient": "^4.1.4",
        "vscode-languageserver": "^4.1.4"
    }
}
