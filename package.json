{
    "name": "alioth-language-support",
    "displayName": "Alioth Language Support",
    "description": "The language support for the Alioth programming language.",
    "repository": {
        "type": "git",
        "url": "http://dn-ezr.cn:3000"
    },
    "license": "MIT",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.34.0"
    },
    "activationEvents": [
        "onCommand:alioth.initiateworkspace"
    ],
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "main": "./out/client.js",
    "contributes": {
        "languages": [
            {
                "id": "alioth",
                "aliases": [
                    "Alioth",
                    "alioth"
                ],
                "extensions": [
                    ".alioth"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alioth",
                "scopeName": "source.alioth",
                "path": "./syntaxes/alioth.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "title": "Alioth: Initiate workspace",
                "command": "alioth.initiateworkspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
